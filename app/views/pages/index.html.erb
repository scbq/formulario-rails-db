<div class="container mt-5">
  <h2>Formulario de Registro</h2>
  <%= form_with(url: pages_create_path, method: :get, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, 'Nombre', class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: "Ingresa tu nombre" %>
    </div>

    <div class="form-group">
      <%= form.label :age, 'Edad', class: 'form-label' %>
      <%= form.number_field :age, class: 'form-control', placeholder: "Ingresa tu edad" %>
    </div>

    <div class="form-group">
      <%= form.label :email, 'Correo electrónico', class: 'form-label' %>
      <%= form.email_field :email, class: 'form-control', placeholder: "Ingresa tu correo electrónico" %>
    </div>

    <div class="form-group">
      <%= form.submit 'Guardar', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
